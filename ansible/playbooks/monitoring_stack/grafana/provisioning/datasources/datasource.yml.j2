apiVersion: 1

datasources:
  - name: Prometheus
    type: prometheus
    access: proxy
    url: http://localhost:9090
    isDefault: true
    editable: false

  - name: Loki
    type: loki
    access: proxy
    url: http://localhost:3100
    editable: false

  - name: Tempo
    type: tempo
    access: proxy
    url: http://localhost:3200
    editable: false

  - name: ClickHouse
    type: grafana-clickhouse-datasource
    uid: clickhouse
    access: proxy
    editable: false
    jsonData:
      host: localhost
      port: 9000
      username: aether
    secureJsonData:
      password: "{{ secrets.clickhouse.password }}"
