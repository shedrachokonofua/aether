apiVersion: 1

datasources:
  # === Org 1: Aether (full access) ===
  - name: Prometheus
    type: prometheus
    access: proxy
    orgId: 1
    url: http://localhost:9090
    isDefault: true
    editable: false

  - name: Loki
    type: loki
    access: proxy
    orgId: 1
    url: http://localhost:3100
    editable: false

  - name: Tempo
    type: tempo
    access: proxy
    orgId: 1
    url: http://localhost:3200
    editable: false
    jsonData:
      httpHeaderName1: X-Scope-OrgID
    secureJsonData:
      httpHeaderValue1: aether

  - name: ClickHouse
    type: grafana-clickhouse-datasource
    uid: clickhouse
    access: proxy
    orgId: 1
    editable: false
    jsonData:
      host: localhost
      port: 9000
      username: aether
    secureJsonData:
      password: "{{ secrets.clickhouse.password }}"

# Tenant datasources are created via Grafana HTTP API after org creation.
