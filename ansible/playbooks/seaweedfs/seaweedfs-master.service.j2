[Unit]
Description=SeaweedFS Master
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User={{ seaweedfs_user }}
Group={{ seaweedfs_group }}
SyslogIdentifier=seaweedfs-master
WorkingDirectory={{ seaweedfs_master_dir }}

ExecStart=/usr/local/bin/weed master \
  -ip={{ seaweedfs_ip }} \
  -port={{ seaweedfs_port_master }} \
  -mdir={{ seaweedfs_master_dir }} \
  -volumeSizeLimitMB={{ seaweedfs_master_volume_size_limit_mb }}

Restart=always
RestartSec=2

[Install]
WantedBy=multi-user.target


